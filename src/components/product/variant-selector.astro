---
import type { products } from "@wix/stores";
import { ProductOptionChoice } from "../ui/ProductOptionChoice";
import type { createSelectedVariantStore } from "../headless/SelectedVariantStore";

type Props = {
  product: products.Product;
  selectedVariantStoreId: string &
    ReturnType<typeof createSelectedVariantStore>;
};

const productOptions = Astro.props.product.productOptions;

const hasNoOptionsOrJustOneOption =
  !productOptions?.length ||
  (productOptions.length === 1 && productOptions[0]?.choices?.length === 1);

if (hasNoOptionsOrJustOneOption) {
  return null;
}
---

{
  productOptions.map((option) => (
    <dl class="mb-8">
      <dt class="mb-4 text-sm uppercase tracking-wide">{option.name}</dt>
      <dd class="flex flex-wrap gap-3">
        {option.choices?.map((choice) => (
          <ProductOptionChoice
            client:load
            option={option}
            choice={choice}
            selectedVariantStoreId={Astro.props.selectedVariantStoreId}
          />
        ))}
      </dd>
    </dl>
  ))
}
